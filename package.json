{
  "name": "serverless-typescript-nestjs",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start:local": "sls offline start --httpPort 3000 --printOutput",
    "deploy:dev": "sls deploy --stage dev --verbose",
    "deploy:prod": "sls deploy --stage prod --verbose",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.632.0",
    "@aws-sdk/client-s3": "^3.635.0",
    "@aws-sdk/lib-dynamodb": "^3.632.0",
    "@nestjs/axios": "^3.0.3",
    "@nestjs/common": "^10.4.1",
    "@nestjs/core": "^10.4.1",
    "@nestjs/platform-express": "^10.4.1",
    "@nestjsx/crud": "^4.4.0",
    "@nestjsx/crud-request": "^4.4.0",
    "aws-serverless-express": "^3.3.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "lodash": "^4.17.21",
    "mysql": "^2.17.1",
    "nestjs-config": "^1.4.4",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^7.2.0",
    "stream-to-string": "^1.2.1",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@hewmen/serverless-plugin-typescript": "^1.1.17",
    "@nestjs/testing": "^10.4.1",
    "@types/aws-lambda": "^8.10.15",
    "@types/aws-serverless-express": "^3.3.1",
    "@types/express": "^4.16.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^10.7.1",
    "@types/uuid": "^10.0.0",
    "nodemon": "^3.1.4",
    "prettier": "^1.14.2",
    "serverless": "^3.39.0",
    "serverless-iam-roles-per-function": "^3.2.0",
    "serverless-offline": "12.0.0",
    "serverless-plugin-optimize": "^4.0.2-rc.1",
    "serverless-plugin-typescript": "^2.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.5.0",
    "tslint": "5.11.0",
    "typescript": "^4.5.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
