{
  "compilerOptions": {
    "module": "commonjs",                
    "declaration": true,                
    "removeComments": true,              
    "allowSyntheticDefaultImports": true, 
    "emitDecoratorMetadata": true,       
    "experimentalDecorators": true,      
    "target": "es2018",                  
    "sourceMap": true,                   
    "outDir": "./dist",                  
    "baseUrl": "./",                     
    "types": ["node"],                   
    "esModuleInterop": true,             
    "skipLibCheck": true,                
    "rootDir": "./src",                  
    "strict": true                       
  },
  "include": ["src/**/*.ts"],           
  "exclude": ["node_modules", "dist"]   
}
