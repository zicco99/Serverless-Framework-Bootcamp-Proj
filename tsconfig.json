{
  "compilerOptions": {
    "target": "ES2017",                        
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["ES2017"],                   
    "outDir": "./dist",                        
    "sourceMap": true,
    "declaration": true,
    "strict": true,                            
    "skipLibCheck": true,                      
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]                        
    },
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "include": ["src/**/*"],                     
  "exclude": ["node_modules", "dist"]         
}
